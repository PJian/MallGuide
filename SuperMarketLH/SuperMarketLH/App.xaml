        <Style x:Key="navBtnShopTypeStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <!--修改模板属性-->
            <Setter Property="Template">
                <Setter.Value>
                    <!--控件模板-->
                    <ControlTemplate TargetType="Button">
                        <!--背景色-->
                        <Border x:Name="back" Width="95" Height="95" Background="Transparent" BorderThickness="0">
                            <!--按钮内容-->
                            <Grid>
                                <Grid Grid.Row="0" Grid.Column="0" x:Name="bg" Background="{TemplateBinding Background}"></Grid>
                            </Grid>
                        </Border>
                        <!--触发器-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Width" Value="115" TargetName="back"></Setter>
                                <Setter Property="Height" Value="115" TargetName="back"></Setter>
                            </Trigger>

                            <EventTrigger RoutedEvent="Mouse.MouseDown">
                                <EventTrigger.Actions >
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Width"  To="115"  Storyboard.TargetName="back"/>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Height" To="115" Storyboard.TargetName="back"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="Mouse.MouseUp">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Width"  To="95"  Storyboard.TargetName="back"/>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Height"  To="95"  Storyboard.TargetName="back"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="TouchDown">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Width"  To="115"  Storyboard.TargetName="back"/>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Height"  To="115"  Storyboard.TargetName="back"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="TouchUp">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Width"  To="95" Storyboard.TargetName="back"/>
                                            <DoubleAnimation  Duration="0:0:2"  Storyboard.TargetProperty="Height"  To="95" Storyboard.TargetName="back" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

