<Window x:Class="SuperMarketLHS.win.NewShopWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControl="clr-namespace:SuperMarketLHS.userControl"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="添加店铺"  Height="668" Width="1024" Loaded="Window_Loaded" Background="#f6f6f6" Icon="../img/new.ico" WindowStartupLocation="CenterScreen">
    <Grid x:Name="grid_shopInfo">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="212*"></ColumnDefinition>
            <ColumnDefinition Width="312"></ColumnDefinition>
            <ColumnDefinition Width="150*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="258*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="名字：" HorizontalAlignment="Right" VerticalContentAlignment="Center"></Label>
        <TextBox Text="{Binding Name}" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txb_name" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300"></TextBox>

        <GroupBox FontSize="10" Header="建议图片像素：150*150" Grid.Column="5"  Grid.RowSpan="5">
            <userControl:UserControlLogo  x:Name="userControl_logo" />
        </GroupBox>

        <Label Grid.Column="3" Content="店铺类型：" HorizontalAlignment="Right" VerticalContentAlignment="Center"></Label>
        <StackPanel  Grid.Column="4" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
            <RadioButton x:Name="radio_Special" Content="主打店铺" Margin="0,0,5,0"></RadioButton>
            <RadioButton x:Name="radio_normal" Content="普通店铺" IsChecked="True"></RadioButton>
        </StackPanel>

        <Label Grid.Row="1" Content="排序字母：" HorizontalAlignment="Right" VerticalContentAlignment="Center"></Label>
        <userControl:UserControl_SortChar x:Name="combox_sortChar" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Center"/>

        <Label Grid.Row="1" Grid.Column="3" Content="分类：" HorizontalAlignment="Right" VerticalContentAlignment="Center"></Label>
        <StackPanel Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Orientation="Horizontal">
            <userControl:UserControlCatagory x:Name="combox_Catagory"  Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <Label Content="分类颜色："></Label>
            <telerik:RadColorPicker x:Name="colorPicker_catagoryColor"/>
        </StackPanel>
        <Label Content="店铺标签：" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <TextBox Text="{Binding Label}" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300"></TextBox>

        <Label Content="营业时间：" Grid.Row="2"  Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <StackPanel  Grid.Row="2"  Grid.Column="4"  Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
            <telerik:RadDateTimePicker DateTimeWatermarkContent="开始时间" x:Name="time_start" InputMode="TimePicker" TimeInterval="00:30:00"/>
            <Label Content="~~"></Label>
            <telerik:RadDateTimePicker DateTimeWatermarkContent="结束时间" x:Name="time_end" InputMode="TimePicker" TimeInterval="00:30:00"/>
        </StackPanel>

        <Label Content="联系方式：" Grid.Row="3"  HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <TextBox Text="{Binding Tel}" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300"></TextBox>

        <Label Content="地址：" Grid.Column="3" Grid.Row="3"  HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <TextBox Text="{Binding Address}" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300"></TextBox>

        <Label Content="邮编：" Grid.Row="4"  HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <TextBox Text="{Binding ZipCode}" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300"></TextBox>

        <Label Content="店铺简介：" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <TextBox Text="{Binding Introduction}" Grid.Column="1"  Grid.Row="5" Grid.RowSpan="3" ScrollViewer.VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Grid.ColumnSpan="4"></TextBox>

        <userControl:UserControlShowImgWithToolBar  LabelImgSize="(360*220)" Grid.ColumnSpan="4"   Grid.Row="8" x:Name="userControl_facilities" LabelChooseImgContent="设施介绍" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <userControl:UserControlShowImgWithToolBar LabelImgSize="(700*490)" Grid.Column="4"  Grid.ColumnSpan="3" Grid.Row="8" x:Name="userControl_brandImgs" LabelChooseImgContent="品牌图片" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Grid  Grid.ColumnSpan="9" Grid.Row="9" Background="White">
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" >
                <Button x:Name="btn_save"  Content="保存" Style="{DynamicResource navBtnCommonStyle}" Background="Transparent" Width="60" Height="30" Margin="0,0,10,0" Click="btn_save_Click" ></Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
