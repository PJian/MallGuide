                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="styleList1" TargetType="{x:Type ListBox}">

            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border Height="30" Width="230" BorderBrush="Transparent" BorderThickness="0" Margin="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0*"></RowDefinition>
                                    <RowDefinition Height="30*"></RowDefinition>
                                    <RowDefinition Height="0*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                    <ColumnDefinition Width="90"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Content="{Binding IP}" Grid.Column="0" Grid.Row="1"></Label>
                                <!--<Image Source="{Binding NodeStateImg,Converter={StaticResource ImgConverter}}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30"> </Image>
                                <Image Source="{Binding StateImg,Converter={StaticResource ImgConverter}}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30"></Image>-->
                                <CheckBox IsChecked="{Binding IsConnected}" Grid.Column="1" Grid.Row="1" IsEnabled="False" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>
                                <StackPanel Orientation="Horizontal"  Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center">
                                    <ProgressBar Maximum="{Binding TotalFileNum}" Minimum="1" Value="{Binding UpdateFileNum}" Height="15" Width="50"></ProgressBar>
                                    <Label Content="{Binding Percentage}" Width="50" FontSize="9" VerticalAlignment="Center"></Label>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Grid.IsSharedSizeScope" Value="True" />
        </Style>

        <Style x:Key="styleList" TargetType="{x:Type ListViewItem}">

            <Style.Setters>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <DataTemplate>
                            <Border Height="30" Width="230" BorderBrush="Transparent" BorderThickness="0" Margin="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0*"></RowDefinition>
                                        <RowDefinition Height="30*"></RowDefinition>
                                        <RowDefinition Height="0*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                        <ColumnDefinition Width="90"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding IP}" Grid.Column="0" Grid.Row="1"></Label>
                                    <!--<Image Source="{Binding NodeStateImg,Converter={StaticResource ImgConverter}}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30"> </Image>
                                    <Image Source="{Binding StateImg,Converter={StaticResource ImgConverter}}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30"></Image>-->
                                    <CheckBox IsChecked="{Binding IsConnected}" Grid.Column="1" Grid.Row="1" IsEnabled="False" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>
                                    <StackPanel Orientation="Horizontal"  Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center">
                                        <ProgressBar Maximum="{Binding TotalFileNum}" Minimum="1" Value="{Binding UpdateFileNum}" Height="15" Width="50"></ProgressBar>
                                        <Label Content="{Binding Percentage}" Width="50" FontSize="9" VerticalAlignment="Center"></Label>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>

    </Application.Resources>
</Application>
