<Application x:Class="SuperMarketLHS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:ResourceManagementService.converter;assembly=ResourceManagementService"
            
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converter:ImgConverter x:Key="ImgConverter"></converter:ImgConverter>

        <Style x:Key="navBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <!--修改模板属性-->
            <Setter Property="Template">
                <Setter.Value>
                    <!--控件模板-->
                    <ControlTemplate TargetType="Button">
                        <!--背景色-->
                        <Border x:Name="back"  Width="98" Height="90" Background="Transparent" BorderBrush="#73c4f1" BorderThickness="{TemplateBinding BorderThickness}">
                            <!--按钮内容-->
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"></RowDefinition>
                                    <RowDefinition Height="45*"></RowDefinition>
                                    <RowDefinition Height="35*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"></ColumnDefinition>
                                    <ColumnDefinition Width="45*"></ColumnDefinition>
                                    <ColumnDefinition Width="25*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="1" Grid.Column="1" Background="{TemplateBinding Background}"></Grid>
                                <Label Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="3" Content="{TemplateBinding Tag}" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                            </Grid>
                        </Border>
                        <!--触发器-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0081cd" TargetName="back"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Transparent" TargetName="back"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="navBtnSelectStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <!--修改模板属性-->
            <Setter Property="Template">
                <Setter.Value>
                    <!--控件模板-->
                    <ControlTemplate TargetType="Button">
                        <!--背景色-->
                        <Border x:Name="back"  Width="98" Height="90" Background="#0081cd" BorderBrush="#73c4f1" BorderThickness="{TemplateBinding BorderThickness}">
                            <!--按钮内容-->
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"></RowDefinition>
                                    <RowDefinition Height="45*"></RowDefinition>
                                    <RowDefinition Height="35*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"></ColumnDefinition>
                                    <ColumnDefinition Width="45*"></ColumnDefinition>
                                    <ColumnDefinition Width="25*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="1" Grid.Column="1" Background="{TemplateBinding Background}" ></Grid>
                                <Label Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="3" Content="{TemplateBinding Tag}" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                            </Grid>
                        </Border>
                        <!--触发器-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0081cd" TargetName="back"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Transparent" TargetName="back"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="leftNavBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <!--修改模板属性-->
            <Setter Property="Template">
                <Setter.Value>
                    <!--控件模板-->
                    <ControlTemplate TargetType="Button">
                        <!--背景色-->
                        <Border x:Name="back"  Width="190" Height="65" Background="Transparent" BorderBrush="#42424a" BorderThickness="{TemplateBinding BorderThickness}">
                            <!--按钮内容-->
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"></RowDefinition>
                                    <RowDefinition Height="45*"></RowDefinition>
                                    <RowDefinition Height="10*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"></ColumnDefinition>
                                    <ColumnDefinition Width="45*"></ColumnDefinition>
                                    <ColumnDefinition Width="10*"></ColumnDefinition>
                                    <ColumnDefinition Width="110*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="1" Grid.Column="1" Background="{TemplateBinding Background}"></Grid>
                                <Label Grid.Row="1"  Grid.Column="3"  Content="{TemplateBinding Tag}" Foreground="White" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
                            </Grid>
                        </Border>
                        <!--触发器-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0095e7" TargetName="back"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Transparent" TargetName="back"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
