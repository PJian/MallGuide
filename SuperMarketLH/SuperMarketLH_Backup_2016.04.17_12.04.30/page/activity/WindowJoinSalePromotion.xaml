<Window x:Class="SuperMarketLH.page.activity.WindowJoinSalePromotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="活动报名" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0" HorizontalAlignment="Center">
            <Label Content="请输入手机号：" ></Label>
            <TextBox Height="30" Width="150" x:Name="txt_mobileNum"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btn_ok" Content="提交" Margin="10,0" Click="btn_ok_Click"></Button>
            <Button x:Name="btn_cancle" Content="取消" Click="btn_cancle_Click">  </Button>
        </StackPanel>
    </Grid>
</Window>
