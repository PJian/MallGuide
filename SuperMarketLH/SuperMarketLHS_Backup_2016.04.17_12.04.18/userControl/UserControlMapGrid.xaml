            <MenuItem Header="编号更改" x:Name="btn_areaNumChang" Click="btn_areaNumChang_Click"  >
                <MenuItem.Icon>
                    <Image Source="/SuperMarketLHS;component/img/shop/edit.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="新建店铺" x:Name="btn_new_shop" Click="btn_new_shop_Click" Visibility="{Binding ShowMenuItemOfAddShop}" >
                <MenuItem.Icon>
                    <Image Source="/SuperMarketLHS;component/img/shop/add.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="入驻店铺" x:Name="btn_shopIn" Click="btn_shopIn_Click" Visibility="{Binding ShowMenuItemOfShopIn}">
                <MenuItem.Icon>
                    <Image Source="/SuperMarketLHS;component/img/shop/link.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="撤销入驻" x:Name="btn_shopOut" Visibility="{Binding ShowMenuItemOfShopOut}" Click="btn_shopOut_Click">
                <MenuItem.Icon>
                    <Image Source="/SuperMarketLHS;component/img/shop/sign_delete.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="删除区域" x:Name="btn_delArea" Click="btn_delArea_Click" Visibility="{Binding DelArea}">
                <MenuItem.Icon>
                    <Image Source="/SuperMarketLHS;component/img/shop/delete.ico"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
       
        
        <Style x:Key="ToolTipStyle" TargetType="ToolTip">
            <Setter Property ="IsOpen" Value="False">
            </Setter>

            <Setter Property ="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border x:Name="errorBorder" Background="White" BorderBrush="Transparent" BorderThickness="0"  Margin ="0">
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition> </RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="类型:" FontSize="12"></TextBlock>
                                    <TextBlock Text="{Binding Path=Type }" FontSize="12"  TextWrapping="Wrap" Foreground="Red"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="1">
                                    <TextBlock Text="编号:" FontSize="12"></TextBlock>
                                    <TextBlock  Text="{Binding Path=Index }" FontSize="12"  TextWrapping="Wrap" Foreground="Red"/>
                                </StackPanel>
                                   </Grid>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property ="IsOpen" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Duration="0:0:3">
                                    <DiscreteObjectKeyFrame KeyTime ="0:0:0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Visible</Visibility >
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                    <DiscreteObjectKeyFrame KeyTime ="0:0:3">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Hidden</Visibility >
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
